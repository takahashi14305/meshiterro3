<div class="col-md-4">
  <h2><%= user.name %>さんのプロフィール</h2>
  <table>
    <thead>
      <tr>
        <th>プロフィール画像</th>
        <th>名前</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
      </tr>
    </tbody>
  </table>
  <% if user != current_user %>
    <% if current_user.following?(user) %>
      <div><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-success" %></div>
    <% else %>
      <div><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-outline-success" %></div>
    <% end %>
  <% end %>
  <teble>
    <tr>
      <td>
        Follow : <%= user.followings.count %>
      </td>
    </tr>
  </teble>

  <% if user == current_user %>
    <div><%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-secondary mt-3" %></div>
  <%end%>
  <div><%= flash[:notice] %></div>
</div>